RewriteEngine on


RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteCond $1 !^(css|js|images|inc|lang)
RewriteRule ^(.*)$ $1.php



RewriteRule ^genel-ayar$ index.php?page=genel-ayar [L,NC]
RewriteRule ^iletisim-ayar$ index.php?page=iletisim-ayar [L,NC]
RewriteRule ^sosyal-ayar$ index.php?page=sosyal-ayar [L,NC]
RewriteRule ^firma-list$ index.php?page=firma-list [L,NC]
